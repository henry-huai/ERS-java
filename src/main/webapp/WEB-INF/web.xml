<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <display-name>auth-demo</display-name>

    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>dev.huai.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PendingRequestServlet</servlet-name>
        <servlet-class>dev.huai.servlets.PendingRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PendingRequestServlet</servlet-name>
        <url-pattern>/pending</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResolvedRequestServlet</servlet-name>
        <servlet-class>dev.huai.servlets.ResolvedRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResolvedRequestServlet</servlet-name>
        <url-pattern>/resolved</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>dev.huai.servlets.RequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdatingRequestServlet</servlet-name>
        <servlet-class>dev.huai.servlets.UpdatingRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatingRequestServlet</servlet-name>
        <url-pattern>/updatingrequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewUserServlet</servlet-name>
        <servlet-class>dev.huai.servlets.ViewUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewUserServlet</servlet-name>
        <url-pattern>/allemployees</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <servlet-class>dev.huai.servlets.NewEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <url-pattern>/addemployee</url-pattern>
    </servlet-mapping>

</web-app>


